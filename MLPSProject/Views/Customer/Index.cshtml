
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_CustomerHomePageLayout.cshtml";
}

<head>
    <style>
        #dd {
            margin-left: 10% !important;
            float: right;
            margin-right: -18.5% !important;
            width: 120px !important;
            font-weight: 500 !important;
            left: 5px !important;
            /*font-size: 20px;*/
            background-color: white;
            border-radius: 0px !important;
        }
    </style>
</head>

@using (Html.BeginForm())
{
<body>
    <div class="container" id="dd">
        <div class="dropdown">
            <button id="btn" class="btn dropdown-toggle" type="button" data-toggle="dropdown">
                @Session["User"]
                <span class="caret"></span>
            </button>
            <ul class="dropdown-menu" id="dd">
                <li>@Html.ActionLink("Logout", "LogOff", "Home")</li>
            </ul>
        </div>
    </div>

    <br />
    <br />
    <br />

    @{
        if (Session["User"] != null)
        {
            <div class="container">

                <div id="myCarousel" class="carousel slide" data-ride="carousel">
                    <ol class="carousel-indicators">

                        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                        <li data-target="#myCarousel" data-slide-to="1"></li>
                        <li data-target="#myCarousel" data-slide-to="2"></li>

                    </ol>


                    <div class="carousel-inner">
                        <div class="item active">
                            <img src="~/Images/Billboardhome.jpg" alt="HomeImage" style="width:100%; height:100%;">
                        </div>

                        <div class="item">
                            <img src="~/Images/Billboardhomeimage.jpg" alt="WoodHome" style="width:100%; height:100%;">
                        </div>

                        <div class="item">
                            <img src="~/Images/BillboardImage.jpg" alt="LoanImage" style="width:100%; height:100%;">
                        </div>
                    </div>

                    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
                        <span class="glyphicon glyphicon-chevron-left"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="right carousel-control" href="#myCarousel" data-slide="next">
                        <span class="glyphicon glyphicon-chevron-right"></span>
                        <span class="sr-only">Next</span>
                    </a>




                </div>
            </div>
        }
        else
        {
            Response.Redirect("~/Home/Index");
        }
    }


</body>
}
