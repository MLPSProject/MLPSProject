<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - © 2019 -Santander Bank</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <style>

        li a {
            color: white;
            padding: 0px;
            margin-right: 40px;
        }
    </style>


</head>

<body>

    <div class="container-fluid " style="background-color:white;">
        <div class="row navbar-static-top">
            <div class="col-md-12">
                <img src="~/Images/santanderJusticia.jpg" width="200" height="100" />

            </div>

            @*<div class="col-md-11"></div>*@
        </div>

    </div>

    <nav class="navbar navbar-expand-lg py-md-0 top-left" style="background-color:#ec0000;align-content:center;">
        <ul class="nav navbar-nav">

            <li class="nav-item" style="margin-left:10px;">
                @Html.ActionLink("Home", "Index", "Home")
            </li>

            <li class="nav-item">
                @Html.ActionLink("Apply Loan", "UnRegisteredUser", "Registration")
            </li>

            <li class="nav-item">
                @Html.ActionLink("EMI Calculator", "Contact", "Home")
            </li>

            <li class="nav-item">
                @Html.ActionLink("Status", "Contact", "Home")
            </li>
        </ul>
    </nav>

    <div class="container body-content">
        @RenderBody()



        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <hr />
        <footer align="middle   ">
            <p>&copy; @DateTime.Now.Year -Santander Bank</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
